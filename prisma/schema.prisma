datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  phone           String
  isCoach         Boolean   @default(false)
  coachSlots      Slot[]    @relation("CoachSlots")
  studentBookings Booking[] @relation("StudentBookings")
  coachCalls      Call[]    @relation("CoachCalls")
}

model Slot {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  coach     User     @relation("CoachSlots", fields: [coachId], references: [id], onDelete: Cascade)
  coachId   Int
  isBooked  Boolean  @default(false)
  booking   Booking?
}

model Booking {
  id        Int      @id @default(autoincrement())
  slot      Slot     @relation(fields: [slotId], references: [id], onDelete: Cascade)
  slotId    Int      @unique
  student   User     @relation("StudentBookings", fields: [studentId], references: [id], onDelete: Cascade)
  studentId Int
  call      Call?
}

model Call {
  id           Int      @id @default(autoincrement())
  booking      Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  bookingId    Int      @unique
  coach        User     @relation("CoachCalls", fields: [coachId], references: [id], onDelete: Cascade)
  coachId      Int
  satisfaction Int?
  notes        String?
  date         DateTime @default(now())
}
